WindowManager:
    Menu:
    NewEmployee:
    EmployeeRecords:

<Menu>:
    name: "Menu"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Main Menu"
            font_size: 32
        Button:
            text: "Create New Employee"
            font_size: 32
            on_release:
                app.root.current = "NewEmployee"
                root.manager.transition.direction = "left"
        Button:
            text: "View Employee Records"
            font_size: 32
            on_release:
                app.root.current = "EmployeeRecords"
                root.manager.transition.direction = "up"

<EmployeeRecords>
    on_pre_enter: root.add_employees()



<NewEmployee>:
    name: "NewEmployee"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            TextInput:
                text: "Enter Name"
                # size_hint: .5, .5
                # pos_hint: { "y": .5 }
                multiline: False
                on_text_validate: root.employee_name(self)
            TextInput:
                text: "Enter Pin"
                # size_hint: .5, .5
                # pos_hint: { "y": .5 }
                multiline: False
                on_text_validate: root.pin(self)
        BoxLayout:
            TextInput:
                text: "FOH?"
                multiline: False
                on_text_validate: root.foh(self)

            TextInput:
                text: "BOH?"
                multiline: False
                on_text_validate: root.boh(self)

            TextInput:
                text: "Leadership?"
                multiline: False
                on_text_validate: root.leadership(self)
        BoxLayout:
            TextInput:
                text: "Date of Birth"
                multiline: False
                on_text_validate: root.birth(self)
            TextInput:
                text: "Hire Date"
                multiline: False
                on_text_validate: root.hire_date(self)
        BoxLayout:
            Button:
                text: "Finalize Employee"
                on_press: root.create_employee()
            Button:
                text: "Main Menu"
                on_release:
                    app.root.current = "Menu"
                    root.manager.transition.direction = "right"



